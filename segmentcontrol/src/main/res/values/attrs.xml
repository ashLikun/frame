<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SegmentControl">
        <attr name="sc_cornerRadius" format="dimension|reference" />
        <attr name="sc_selectedBackgroundColors" format="color|reference" />
        <attr name="sc_selectedTextColors" format="color|reference" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="sc_direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="sc_gaps" format="dimension|reference" />
        <attr name="sc_horizonGap" format="dimension|reference" />
        <attr name="sc_verticalGap" format="dimension|reference" />
        <attr name="sc_selectedIndex" format="integer" />
    </declare-styleable>
    <declare-styleable name="SegmentControlInterior">
        <attr name="sci_default_color" format="color|reference" />
        <attr name="sci_gradual_color1" format="color" />
        <attr name="sci_gradual_color2" format="color" />
        <attr name="sci_gradual_color3" format="color" />
        <attr name="sci_default_text_color" format="color|reference" />
        <attr name="sci_select_text_color" format="color|reference" />
        <attr name="sci_gaps" format="dimension|reference" />
        <attr name="sci_horizon_gap" format="dimension|reference" />
        <attr name="sci_vertical_gap" format="dimension|reference" />
        <attr name="sci_corner_radius" format="dimension|reference" />
        <attr name="android:textSize" />
        <attr name="sci_texts" format="string|reference" />
    </declare-styleable>
</resources>